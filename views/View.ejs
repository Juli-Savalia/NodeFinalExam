<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book lISTS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div align="center" class="my-5">
      <table class="table  table-hover w-50">
        <thead>
          <tr>
            <th scope="col">Sr.</th>
            <th scope="col">Book Name</th>
            <th scope="col">Author</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% book.map((b,i) => { %>
              <tr>
                <td><%= ++i %></td>
                <td><%= b.book_title %></td>
                <td><%= b.book_author %></td>
                <td><%= b.category %></td>
                <td><%= b.book_price %></td>
                <td>
                  <button class="btn btn-success px-4 me-2"><a href="/EditRecord?eid=<%= b.id %>">Edit</a></button>
                  ||
                  <button class="btn btn-danger ms-2"><a href="/deleteRecord?deleteSr=<%= b.id %>">Delete</a></button>
                </td>
              </tr>
            <% }) %>
        </tbody>

      </table>
      <a href="/" class="btn btn-primary mb-4">Add</a>
     
    </div>
</body>
</html>